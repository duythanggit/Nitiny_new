<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/size_8dp"
    android:elevation="@dimen/size_10dp"
    app:cardCornerRadius="@dimen/size_8dp"
    tools:ignore="MissingPrefix">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imgAvatarShop"
            android:layout_width="@dimen/size_80dp"
            android:layout_height="@dimen/size_80dp"
            tools:src="@drawable/ic_avatar_default"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/size_8dp">
            <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sân bóng Han Kai"
                android:textColor="@color/colorFF8800"
                fontPath="@string/font_HelveticaNeue_Medium"
                android:layout_marginTop="@dimen/size_4dp"/>
            <TextView
                android:id="@+id/txtCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="(Mã: SHK 25)"
                android:textColor="@color/color4D4D4D"
                fontPath="@string/font_HelveticaNeue_Medium"
                android:layout_marginTop="@dimen/size_4dp"/>
            <TextView
                android:id="@+id/txtAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Mỹ Đình, Hà Nội"
                android:textColor="@color/color242937"
                fontPath="@string/font_HelveticaNeue_Medium"
                android:drawableLeft="@drawable/ic_marker_linked"
                android:drawablePadding="@dimen/size_4dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/size_8dp"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>