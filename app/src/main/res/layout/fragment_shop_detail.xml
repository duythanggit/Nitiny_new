<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingPrefix">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.daimajia.slider.library.SliderLayout
            android:id="@+id/sliderServices"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_183dp"
            android:background="@color/colorFFFFFF" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="@dimen/size_16dp"
            android:paddingTop="@dimen/size_5dp"
            android:paddingEnd="@dimen/size_10dp"
            android:paddingBottom="@dimen/size_5dp">

            <TextView
                fontPath="@string/font_HelveticaNeue_Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/str_welcome_shop"
                android:textColor="@color/colorText"
                android:textSize="@dimen/text_size_16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivLogo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4.5"
                android:gravity="right"
                android:orientation="horizontal"
                android:padding="@dimen/size_8dp">

                <ImageView
                    android:id="@+id/imgCall"
                    android:layout_width="@dimen/size_20dp"
                    android:layout_height="@dimen/size_20dp"
                    android:src="@drawable/ic_phone" />

                <ImageView
                    android:id="@+id/imgChat"
                    android:layout_width="@dimen/size_25dp"
                    android:layout_height="@dimen/size_21dp"
                    android:layout_marginLeft="@dimen/size_15dp"
                    android:src="@drawable/ic_message" />

                <ImageView
                    android:id="@+id/imgLocation"
                    android:layout_width="@dimen/size_20dp"
                    android:layout_height="@dimen/size_20dp"
                    android:layout_marginLeft="@dimen/size_12dp"
                    android:src="@drawable/ic_location"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_5dp"
            android:background="@color/colorE8E7E7" />

        <!--Main menu-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_16dp"
            android:orientation="horizontal"
            android:paddingStart="@dimen/size_30dp"
            android:paddingEnd="@dimen/size_30dp"
            android:weightSum="4">

            <LinearLayout
                android:id="@+id/lnProduct"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="@dimen/size_50dp"
                    android:layout_height="@dimen/size_50dp"
                    android:background="@drawable/bkg_border_linked_service"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgProduct"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/size_10dp"
                        android:src="@drawable/ic_product" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txtProduct"
                    fontPath="@string/font_HelveticaNeue_Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:maxLines="2"
                    android:text="@string/str_production"
                    android:textAlignment="center"
                    android:textColor="@color/color646464"
                    android:textSize="@dimen/text_size_12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnService"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="@dimen/size_50dp"
                    android:layout_height="@dimen/size_50dp"
                    android:background="@drawable/bkg_border_linked_service"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/size_10dp"
                        android:src="@drawable/ic_service" />
                </LinearLayout>

                <TextView
                    fontPath="@string/font_HelveticaNeue_Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:maxLines="2"
                    android:text="@string/str_service"
                    android:textAlignment="center"
                    android:textColor="@color/color646464"
                    android:textSize="@dimen/text_size_12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnSale"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="@dimen/size_50dp"
                    android:layout_height="@dimen/size_50dp"
                    android:background="@drawable/bkg_border_linked_service"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/size_10dp"
                        android:src="@drawable/ic_promotion" />
                </LinearLayout>

                <TextView
                    fontPath="@string/font_HelveticaNeue_Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:maxLines="2"
                    android:text="@string/str_promotion"
                    android:textAlignment="center"
                    android:textColor="@color/color646464"
                    android:textSize="@dimen/text_size_12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnNews"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="@dimen/size_50dp"
                    android:layout_height="@dimen/size_50dp"
                    android:background="@drawable/bkg_border_linked_service"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/size_10dp"
                        android:src="@drawable/ic_newspaper" />
                </LinearLayout>

                <TextView
                    fontPath="@string/font_HelveticaNeue_Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:maxLines="2"
                    android:text="@string/str_news_paper"
                    android:textAlignment="center"
                    android:textColor="@color/color646464"
                    android:textSize="@dimen/text_size_12sp" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/size_15dp"
            android:background="@color/color000000" />


        <!--Promotion-->
        <LinearLayout
            android:id="@+id/llPromotion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/size_16dp"
            android:paddingTop="@dimen/size_16dp"
            android:paddingEnd="@dimen/size_16dp"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    fontPath="@string/font_HelveticaNeue_Bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/str_promotion"
                    android:textColor="@color/color333333"
                    android:textSize="@dimen/text_size_16sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ivLogo" />

                <TextView
                    android:id="@+id/tvPromotion"
                    fontPath="@string/font_HelveticaNeue_Bold"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="0dp"
                    android:text="@string/str_view_all"
                    android:textColor="@color/colorF92323"
                    android:textSize="@dimen/text_size_14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ivLogo" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/llPromotionTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_8dp">


                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_200dp"
                        android:scaleType="centerCrop"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0" />

                </android.support.constraint.ConstraintLayout>

                <TextView
                    android:id="@+id/tvTitlePromotion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_8dp"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:textColor="@color/color000000"
                    android:textSize="@dimen/text_size_14sp" />

                <TextView
                    android:id="@+id/tvTimePromotion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_5dp"
                    android:drawableStart="@drawable/ic_time_expired"
                    android:drawablePadding="@dimen/size_10dp"
                    android:maxLines="1"
                    android:textColor="@color/color000000"
                    android:textSize="@dimen/text_size_12sp" />

            </LinearLayout>
        </LinearLayout>

        <!--Promotion_1-->
        <LinearLayout
            android:id="@+id/llPromotion_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/size_16dp"
            android:paddingTop="@dimen/size_16dp"
            android:paddingEnd="@dimen/size_16dp"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/llPromotionTop_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_8dp">


                    <ImageView
                        android:id="@+id/imageView_1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_200dp"
                        android:scaleType="centerCrop"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0" />

                </android.support.constraint.ConstraintLayout>

                <TextView
                    android:id="@+id/tvTitlePromotion_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_8dp"
                    android:maxLines="1"
                    android:textColor="@color/color000000"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_14sp" />

                <TextView
                    android:id="@+id/tvTimePromotion_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_5dp"
                    android:drawableStart="@drawable/ic_time_expired"
                    android:drawablePadding="@dimen/size_10dp"
                    android:maxLines="1"
                    android:textColor="@color/color000000"
                    android:textSize="@dimen/text_size_12sp" />

            </LinearLayout>
        </LinearLayout>


        <!--News-->
        <LinearLayout
            android:id="@+id/llNews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/size_16dp"
            android:paddingTop="@dimen/size_16dp"
            android:paddingEnd="@dimen/size_16dp"
            android:paddingBottom="@dimen/size_20dp"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    fontPath="@string/font_HelveticaNeue_Bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/str_newspaper"
                    android:textColor="@color/color333333"
                    android:textSize="@dimen/text_size_16sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ivLogo" />

                <TextView
                    android:id="@+id/tvNewsPaper"
                    fontPath="@string/font_HelveticaNeue_Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="0dp"
                    android:text="@string/str_view_all"
                    android:textColor="@color/colorF92323"
                    android:textSize="@dimen/text_size_14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ivLogo" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/llNewsTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivNews"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_200dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/tvTitleNews"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_8dp"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:textColor="@color/color000000"
                    android:textSize="@dimen/text_size_14sp" />

                <TextView
                    android:id="@+id/tvTimeNews"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_5dp"
                    android:drawableStart="@drawable/ic_time_expired"
                    android:drawablePadding="@dimen/size_10dp"
                    android:maxLines="1"
                    android:textColor="@color/color000000"
                    android:textSize="@dimen/text_size_12sp" />

            </LinearLayout>
        </LinearLayout>

        <!--News_1-->
        <LinearLayout
            android:id="@+id/llNews_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/size_16dp"
            android:paddingTop="@dimen/size_16dp"
            android:paddingEnd="@dimen/size_16dp"
            android:paddingBottom="@dimen/size_20dp"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/llNewsTop_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivNews_1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_200dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/tvTitleNews_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_8dp"
                    android:maxLines="1"
                    android:textColor="@color/color000000"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_14sp" />

                <TextView
                    android:id="@+id/tvTimeNews_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_5dp"
                    android:drawableStart="@drawable/ic_time_expired"
                    android:drawablePadding="@dimen/size_10dp"
                    android:maxLines="1"
                    android:textColor="@color/color000000"
                    android:textSize="@dimen/text_size_12sp" />

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</android.support.v4.widget.NestedScrollView>