<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/detailContainer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingPrefix"
    xmlns:tools="http://schemas.android.com/tools">
    <vn.chapp.vn24h.ui.widget.UiToolbar
        android:id="@+id/toolbarDetailActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/size_8dp">
            <TextView
                android:id="@+id/txt_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="T2, 10.02.19"
                android:textColor="@color/color242937"
                android:drawableRight="@drawable/ic_calendar"
                android:drawablePadding="@dimen/size_8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/txt_customer_book"
                android:background="@drawable/bg_text_input"
                android:padding="@dimen/size_4dp"/>
            <TextView
                android:id="@+id/txt_customer_book"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/title_customer_book"
                android:textColor="@color/color242937"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/txt_time"
                android:gravity="center_vertical"/>
        </android.support.constraint.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1dp"
            android:background="@color/color33242937"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_8dp"
            android:elevation="@dimen/size_10dp"
            app:cardCornerRadius="@dimen/size_8dp">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/size_10dp"
                android:paddingLeft="@dimen/size_4dp">
                <LinearLayout
                    android:id="@+id/lnAvatar"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_100dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:orientation="vertical">
                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/imgAvatar"
                        android:layout_width="@dimen/size_70dp"
                        android:layout_height="@dimen/size_70dp"
                        android:src="@drawable/ic_vietnamese" />
                    <TextView
                        android:layout_width="@dimen/size_70dp"
                        android:layout_height="wrap_content"
                        android:text="Hai Kan"
                        android:textColor="@color/color242937"
                        fontPath="@string/font_HelveticaNeue_Medium"
                        android:gravity="center_horizontal"/>
                </LinearLayout>
                <View
                    android:id="@+id/viewLine"
                    android:layout_width="1dp"
                    android:layout_height="@dimen/size_100dp"
                    android:background="@color/colorF5F5F5"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/lnAvatar"
                    app:layout_constraintEnd_toStartOf="@+id/lnInfor"
                    android:layout_marginStart="@dimen/size_8dp"
                    android:layout_marginEnd="@dimen/size_8dp"/>
                <LinearLayout
                    android:id="@+id/lnInfor"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/size_100dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/viewLine"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/size_8dp"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nguyễn Khang, Cầu Giấy"
                        android:textColor="@color/color4D4D4D"
                        fontPath="@string/font_HelveticaNeue_Medium"
                        android:drawableLeft="@drawable/ic_locate"
                        android:drawablePadding="@dimen/size_8dp"
                        android:gravity="center_vertical"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="098.783.5699"
                        android:textColor="@color/color4D4D4D"
                        fontPath="@string/font_HelveticaNeue_Medium"
                        android:drawableLeft="@drawable/ic_call"
                        android:drawablePadding="@dimen/size_16dp"
                        android:layout_marginTop="@dimen/size_8dp"
                        android:gravity="center_vertical"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tham gia: 6 tháng trước"
                        android:textColor="@color/color4D4D4D"
                        fontPath="@string/font_HelveticaNeue_Medium"
                        android:layout_marginLeft="@dimen/size_32dp"
                        android:layout_marginTop="@dimen/size_4dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="35 lần đặt tại Hai "
                        android:textColor="@color/color4D4D4D"
                        fontPath="@string/font_HelveticaNeue_Medium"
                        android:layout_marginLeft="@dimen/size_32dp"
                        android:layout_marginTop="@dimen/size_4dp"/>
                </LinearLayout>
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_8dp"
            android:elevation="@dimen/size_10dp"
            app:cardCornerRadius="@dimen/size_8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/size_8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_booking_infor"
                    android:textColor="@color/color242937"
                    android:textSize="@dimen/text_size_16sp"
                    fontPath="@string/font_HelveticaNeue_Medium"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đặt lúc: 10h, 10.09.2019"
                    android:textColor="@color/color717171"
                    fontPath="@string/font_HelveticaNeue_Medium"
                    android:layout_marginTop="@dimen/size_16dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14h, T2, 12.09.2019"
                    android:textColor="@color/color242937"
                    fontPath="@string/font_HelveticaNeue_Medium"
                    android:drawableLeft="@drawable/ic_calendar"
                    android:drawablePadding="@dimen/size_8dp"
                    android:layout_marginTop="@dimen/size_16dp"
                    android:gravity="center_vertical"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sân đơn"
                    android:textColor="@color/color242937"
                    fontPath="@string/font_HelveticaNeue_Medium"
                    android:drawableLeft="@drawable/ic_calendar"
                    android:drawablePadding="@dimen/size_8dp"
                    android:layout_marginTop="@dimen/size_8dp"
                    android:gravity="center_vertical"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_booking_locate"
                    android:textColor="@color/color242937"
                    android:textSize="@dimen/text_size_16sp"
                    fontPath="@string/font_HelveticaNeue_Medium"
                    android:layout_marginTop="@dimen/size_16dp"/>
                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_8dp">
                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/imgAvatarHost"
                        android:layout_width="@dimen/size_70dp"
                        android:layout_height="@dimen/size_70dp"
                        android:src="@drawable/ic_vietnamese"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/lnInforHost" />
                    <LinearLayout
                        android:id="@+id/lnInforHost"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/imgAvatarHost"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="@dimen/size_16dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sân: Hai kan1 (mã: SHK 25)"
                            android:textColor="@color/color242937"
                            fontPath="@string/font_HelveticaNeue_Medium" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="My Dinh, Ha Noi"
                            android:textColor="@color/color242937"
                            android:textSize="@dimen/text_size_12sp"
                            fontPath="@string/font_HelveticaNeue_Medium"
                            android:drawableLeft="@drawable/ic_location"
                            android:drawablePadding="@dimen/size_8dp"
                            android:layout_marginTop="@dimen/size_3dp"
                            android:gravity="center_vertical"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="908.783.5699"
                            android:textColor="@color/color242937"
                            android:textSize="@dimen/text_size_12sp"
                            fontPath="@string/font_HelveticaNeue_Medium"
                            android:drawableLeft="@drawable/ic_call"
                            android:drawablePadding="@dimen/size_16dp"
                            android:layout_marginTop="@dimen/size_3dp"
                            android:gravity="center_vertical"/>
                    </LinearLayout>
                </android.support.constraint.ConstraintLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
</LinearLayout>