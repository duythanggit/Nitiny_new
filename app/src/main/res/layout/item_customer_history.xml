<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="MissingPrefix"
    app:cardCornerRadius="@dimen/size_6dp"
    android:layout_marginStart="@dimen/size_16dp"
    android:layout_marginEnd="@dimen/size_16dp"
    android:layout_marginTop="@dimen/size_9dp"
    android:elevation="@dimen/size_10dp"
    android:layout_marginBottom="@dimen/size_9dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/size_8dp">
        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/civAvatar"
            android:layout_width="@dimen/size_63dp"
            android:layout_height="@dimen/size_63dp"
            android:src="@drawable/ic_avatar_default"
            app:civ_border_width="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <ImageView
            android:id="@+id/ivDiamond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_diamond_large"
            app:layout_constraintBottom_toBottomOf="@id/civAvatar"
            app:layout_constraintEnd_toEndOf="@id/civAvatar"
            android:layout_marginBottom="@dimen/size_10dp"
            android:layout_marginEnd="@dimen/size_2dp"/>
        <View
            android:id="@+id/vLine"
            android:layout_width="1px"
            android:layout_height="0dp"
            android:background="@color/colorE6E6E6"
            app:layout_constraintStart_toEndOf="@id/ivDiamond"
            android:layout_marginStart="@dimen/size_10dp"
            app:layout_constraintBottom_toBottomOf="@id/tvPhone"
            app:layout_constraintTop_toTopOf="@id/civAvatar"/>

        <android.support.constraint.Guideline
            android:id="@+id/guideLineEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="@dimen/size_117dp"/>

        <TextView
            android:id="@+id/tvCategory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="massae"
            android:drawablePadding="@dimen/size_5dp"
            app:layout_constraintStart_toEndOf="@id/guideLineEnd"
            android:drawableStart="@drawable/ic_category"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tvTime"/>

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="15h"
            android:drawablePadding="@dimen/size_5dp"
            app:layout_constraintStart_toEndOf="@id/guideLineEnd"
            android:drawableStart="@drawable/ic_tick_time"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/ConstraintCenterVertical"/>

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Đã hủy"
            app:layout_constraintStart_toEndOf="@id/guideLineEnd"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="@dimen/text_size_16sp"
            app:layout_constraintTop_toBottomOf="@id/tvTime"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/colorFF8800"/>

        <TextView
            android:id="@+id/tvName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Mã Hàn"
            app:layout_constraintStart_toEndOf="@id/vLine"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideLineEnd"
            android:textSize="@dimen/text_size_18sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginStart="@dimen/size_10dp"/>

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Mỹ Đình, HN"
            app:layout_constraintStart_toEndOf="@id/vLine"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideLineEnd"
            android:textSize="@dimen/text_size_16sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/size_3dp"
            android:textColor="@color/colorFF8800"
            app:layout_constraintTop_toBottomOf="@id/tvName"
            android:layout_marginStart="@dimen/size_10dp"/>

        <TextView
            android:id="@+id/tvTimeDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="10h, 10.09.2019"
            app:layout_constraintStart_toEndOf="@id/vLine"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideLineEnd"
            android:textSize="@dimen/text_size_12sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/size_3dp"
            android:textColor="@color/color808080"
            app:layout_constraintTop_toBottomOf="@id/tvAddress"
            android:layout_marginStart="@dimen/size_10dp"/>

        <TextView
            android:id="@+id/tvPhone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="098.783.5699"
            app:layout_constraintStart_toEndOf="@id/vLine"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideLineEnd"
            android:textSize="@dimen/text_size_12sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:drawableStart="@drawable/ic_phone"
            android:layout_marginTop="@dimen/size_3dp"
            android:drawablePadding="@dimen/size_5dp"
            app:layout_constraintTop_toBottomOf="@id/tvTimeDate"
            android:layout_marginStart="@dimen/size_10dp"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>