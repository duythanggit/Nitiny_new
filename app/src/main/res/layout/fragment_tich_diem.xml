<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/txtLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Danh mục điểm"
        android:textSize="@dimen/text_size_16sp"
        fontPath="@string/font_HelveticaNeue_Medium"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/size_16dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorFF8800Transparent"
        android:layout_marginTop="@dimen/size_16dp"
        android:layout_marginHorizontal="@dimen/size_60dp"/>
    <vn.chapp.vn24h.base.BaseRecyclerView
        android:id="@+id/rcTichDiem"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>