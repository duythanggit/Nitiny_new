<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorE9E4E4"
    tools:ignore="MissingPrefix"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:visibility="gone">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_13dp"
            android:layout_marginTop="@dimen/size_10dp"
            android:layout_marginEnd="@dimen/size_13dp"
            android:background="@drawable/bkg_gray_round"
            android:drawableStart="@drawable/ic_search"
            android:drawablePadding="@dimen/size_16dp"
            android:hint="Tìm kiếm"
            android:paddingStart="@dimen/size_22dp"
            android:paddingTop="@dimen/size_9dp"
            android:paddingEnd="@dimen/size_22dp"
            android:paddingBottom="@dimen/size_9dp"
            android:textSize="@dimen/text_size_12sp"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="@dimen/size_9dp"
            android:background="@color/color707070" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_13dp"
            android:layout_marginTop="@dimen/size_6dp"
            android:text="@string/title_customer_link_chat"
            fontPath="@string/font_HelveticaNeue_Medium"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcCustomerOnline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcChat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/size_7dp"
        android:background="@android:color/white"/>
</LinearLayout>