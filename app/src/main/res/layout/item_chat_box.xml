<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="@dimen/size_13dp"
    android:paddingEnd="@dimen/size_13dp"
    android:paddingTop="@dimen/size_13dp"
    android:paddingBottom="@dimen/size_3dp"
    tools:ignore="MissingPrefix">
    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/civAvatar"
        android:layout_width="@dimen/size_40dp"
        android:layout_height="@dimen/size_40dp"
        android:src="@drawable/img_splash_logo"
        app:layout_constraintTop_toTopOf="@id/tvName"
        app:layout_constraintBottom_toBottomOf="@id/tvLastMsg"
        tools:ignore="MissingConstraints" />
    <ImageView
        android:layout_width="@dimen/size_10dp"
        android:layout_height="@dimen/size_10dp"
        android:src="@drawable/drawble_status_online"
        app:layout_constraintBottom_toBottomOf="@id/civAvatar"
        app:layout_constraintEnd_toEndOf="@id/civAvatar"
        android:layout_marginBottom="@dimen/size_5dp"
        android:layout_marginEnd="@dimen/size_5dp"/>
    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="@dimen/text_size_10sp"
        android:textColor="@color/color666666"
        android:text="11pm"/>
    <TextView
        android:id="@+id/tvName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_12sp"
        fontPath="@string/font_HelveticaNeue_Medium"
        app:layout_constraintStart_toEndOf="@id/civAvatar"
        android:text="Yang Yo"
        android:layout_marginStart="@dimen/size_6dp"
        app:layout_constraintEnd_toStartOf="@id/tvTime"
        android:layout_marginEnd="@dimen/size_10dp"/>
    <TextView
        android:id="@+id/tvLastMsg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_12sp"
        android:textColor="@color/color333333"
        android:text="Good night, and see you again"
        app:layout_constraintStart_toStartOf="@id/tvName"
        app:layout_constraintTop_toBottomOf="@id/tvName"
        android:layout_marginEnd="@dimen/size_10dp"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintEnd_toStartOf="@id/tvTime"/>
</android.support.constraint.ConstraintLayout>