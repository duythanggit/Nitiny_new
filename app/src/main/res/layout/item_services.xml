<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/size_7dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_margin="@dimen/size_3dp"
        android:elevation="@dimen/size_6dp"
        app:cardCornerRadius="@dimen/size_12dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bkg_border_linked_service"
        android:orientation="vertical"
        android:padding="@dimen/size_8dp">

        <ImageView
            android:id="@+id/imgServiceAvatar"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_35dp"
            android:src="@drawable/ic_facebook"
            android:scaleType="fitXY"
            android:layout_centerHorizontal="true" />
        <ImageView
            android:id="@+id/imgFavorite"
            android:layout_width="@dimen/size_15dp"
            android:layout_height="@dimen/size_15dp"
            android:src="@drawable/ic_favorite_16dp"
            android:scaleType="fitXY"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"/>
    </RelativeLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/txtServiceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_15dp"
        android:maxLines="2"
        android:textAlignment="center"
        android:textColor="@color/color646464" />
</LinearLayout>