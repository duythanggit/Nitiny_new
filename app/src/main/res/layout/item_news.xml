<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/size_8dp"
    android:paddingEnd="@dimen/size_8dp"
    tools:ignore="MissingPrefix">

    <TextView
        android:id="@+id/tvTitle"
        fontPath="@string/font_HelveticaNeue_Bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:text="SDasdasdasd"
        android:textColor="@color/color000000"
        android:textSize="@dimen/text_size_14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvTime"
        fontPath="@string/font_HelveticaNeue_Light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_time"
        android:drawablePadding="@dimen/size_10dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:text="asdasd "
        android:textColor="@color/color000000"
        android:textSize="@dimen/text_size_12sp" />

    <TextView
        android:id="@+id/tvContent"
        fontPath="@string/font_HelveticaNeue_Light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:text="asdasdas"
        android:textColor="@color/color000000"
        android:textSize="@dimen/text_size_14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="@dimen/size_5dp"
        android:text="Xem chi tiáº¿t"
        android:textColor="@color/colorFF0000"
        android:textSize="@dimen/text_size_16sp" />


    <ImageView
        android:id="@+id/ivThumb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/size_10dp"
        android:background="@drawable/bg_banner"
        android:scaleType="fitXY" />
</LinearLayout>