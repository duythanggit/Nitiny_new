<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="MissingPrefix">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/size_16dp">

        <TextView
            fontPath="@string/font_HelveticaNeue_Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông tin shop"
            android:textColor="@color/color242937"
            android:textSize="@dimen/text_size_16sp" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_8dp"
            android:background="@drawable/bg_border_bottom"
            android:paddingBottom="@dimen/size_16dp">

            <android.support.v7.widget.CardView
                android:id="@+id/cartShopAvatar"
                android:layout_width="@dimen/size_65dp"
                android:layout_height="@dimen/size_65dp"
                android:layout_marginBottom="@dimen/size_8dp"
                app:cardCornerRadius="@dimen/size_30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/lnInforHost"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/imgAvatarHost"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/avb_logo" />
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:id="@+id/lnInforHost"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_16dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/cartShopAvatar"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/txtName"
                    fontPath="@string/font_HelveticaNeue_Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color242937" />

                <TextView
                    android:id="@+id/txtAddress"
                    fontPath="@string/font_HelveticaNeue_Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_3dp"
                    android:drawableLeft="@drawable/ic_gps"
                    android:drawablePadding="@dimen/size_10dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/color242937"
                    android:textSize="@dimen/text_size_12sp" />

                <TextView
                    android:id="@+id/txtPhone"
                    fontPath="@string/font_HelveticaNeue_Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_5dp"
                    android:drawableLeft="@drawable/ic_phone_confirm"
                    android:drawablePadding="@dimen/size_5dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/color242937"
                    android:textSize="@dimen/text_size_12sp" />

                <TextView
                    fontPath="@string/font_HelveticaNeue_Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:gravity="center_vertical"
                    android:text="Mở cửa: 7h30 - 23h30"
                    android:textColor="@color/color1BB01A"
                    android:textSize="@dimen/text_size_14sp"
                    android:visibility="gone" />

            </LinearLayout>
        </android.support.constraint.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_border_bottom"
            android:orientation="vertical"
            android:paddingBottom="@dimen/size_16dp">

            <TextView
                fontPath="@string/font_HelveticaNeue_Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_16dp"
                android:text="Thông tin hàng"
                android:textColor="@color/color242937"
                android:textSize="@dimen/text_size_16sp" />

            <TextView
                android:id="@+id/txtPhoneReceive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10dp"
                android:drawablePadding="@dimen/size_8dp"
                android:gravity="center_vertical"
                android:text="Sđt"
                android:textColor="@color/color242937"
                android:textSize="@dimen/text_size_14sp" />

            <TextView
                android:id="@+id/txtDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10dp"
                android:drawablePadding="@dimen/size_8dp"
                android:gravity="center_vertical"
                android:text="14h, T2, 12.09.2019"
                android:textColor="@color/color242937"
                android:textSize="@dimen/text_size_14sp" />

            <TextView
                android:id="@+id/txtAddressReceive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10dp"
                android:drawablePadding="@dimen/size_8dp"
                android:gravity="center_vertical"
                android:text="Nhận tại abc..."
                android:textColor="@color/color242937"
                android:textSize="@dimen/text_size_14sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_border_bottom"
            android:orientation="vertical"
            android:paddingBottom="@dimen/size_16dp">

            <TextView
                fontPath="@string/font_HelveticaNeue_Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_16dp"
                android:text="Sản phẩm"
                android:textColor="@color/color242937"
                android:textSize="@dimen/text_size_16sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rcConfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_8dp"
                android:drawablePadding="@dimen/size_8dp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_16dp">

            <TextView
                fontPath="@string/font_HelveticaNeue_Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng sản phẩm:"
                android:textColor="@color/color242937"
                android:textSize="@dimen/text_size_16sp" />

            <TextView
                android:id="@+id/txtTotalCount"
                fontPath="@string/font_HelveticaNeue_Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="0"
                android:textColor="@color/color000000"
                android:textSize="@dimen/text_size_16sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_4dp">

            <TextView
                fontPath="@string/font_HelveticaNeue_Light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng tiền:"
                android:textColor="@color/color242937"
                android:textSize="@dimen/text_size_16sp" />

            <TextView
                android:id="@+id/txtTotalPrice"
                fontPath="@string/font_HelveticaNeue_Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="0 đ"
                android:textColor="@color/color000000"
                android:textSize="@dimen/text_size_16sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_4dp"
            android:orientation="horizontal">

            <TextView
                fontPath="@string/font_HelveticaNeue_Light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hình thức thanh toán: "
                android:textColor="@color/color242937"
                android:textSize="@dimen/text_size_16sp" />

            <TextView
                android:id="@+id/txtPayment"
                fontPath="@string/font_HelveticaNeue_Light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiền mặt"
                android:textColor="@color/colorFF0000"
                android:textSize="@dimen/text_size_16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10dp"
            android:background="@drawable/bg_form_order_note"
            android:gravity="top"
            android:lines="5"
            android:maxLines="5"
            android:padding="@dimen/size_8dp"
            android:text="@string/title_other_requirement"
            android:textColor="@color/color242937" />

        <Button
            android:id="@+id/btnBooking"
            style="@style/ConstraintCenterHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_22dp"
            android:background="@drawable/bg_buttom_highlight"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:paddingStart="@dimen/size_20dp"
            android:paddingTop="@dimen/size_10dp"
            android:paddingEnd="@dimen/size_20dp"
            android:paddingBottom="@dimen/size_10dp"
            android:text="@string/title_confirm"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_16sp"
            app:layout_constraintTop_toBottomOf="@id/tvDesc" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>