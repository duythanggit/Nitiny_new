<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:ignore="MissingPrefix">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_input_code"
        android:textColor="@color/color242937"
        fontPath="@string/font_HelveticaNeue_Medium"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/size_8dp"/>
    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_8dp"
        android:layout_gravity="center_horizontal">
        <android.support.constraint.ConstraintLayout
            android:id="@+id/layoutInsertCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_16dp"
            android:layout_marginEnd="@dimen/size_16dp"
            android:background="@drawable/bg_edit_text"
            android:padding="@dimen/size_8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <EditText
                android:id="@+id/edtInsertCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:maxLength="50"
                android:inputType="none"
                android:background="@android:color/white"
                android:layout_marginEnd="@dimen/size_8dp"
                android:layout_marginStart="@dimen/size_8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:padding="@dimen/size_8dp"/>
        </android.support.constraint.ConstraintLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_8dp"
            android:text="@string/title_insert_code"
            android:textColor="@color/color717171"
            android:layout_marginStart="16dp"
            android:background="@android:color/white"
            android:paddingStart="@dimen/size_4dp"
            android:paddingEnd="@dimen/size_4dp"
            app:layout_constraintBottom_toTopOf="@+id/layoutInsertCode"
            app:layout_constraintStart_toStartOf="@+id/layoutInsertCode"
            app:layout_constraintTop_toTopOf="@+id/layoutInsertCode" />
    </android.support.constraint.ConstraintLayout>
    <Button
        android:id="@+id/btnAddCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_add_code"
        android:background="@drawable/bg_button_primary"
        android:textColor="@android:color/white"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/size_16dp"
        android:paddingLeft="@dimen/size_16dp"
        android:paddingRight="@dimen/size_16dp"
        android:textAllCaps="false"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1dp"
        android:background="@color/color33242937"
        android:layout_marginTop="@dimen/size_16dp"
        android:layout_marginBottom="@dimen/size_16dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_shop_linked"
        android:textColor="@color/color242937"
        fontPath="@string/font_HelveticaNeue_Medium"
        android:layout_marginLeft="@dimen/size_8dp"
        android:layout_marginRight="@dimen/size_8dp"
        android:layout_marginBottom="@dimen/size_8dp"/>
    <vn.chapp.vn24h.base.BaseRecyclerView
        android:id="@+id/rcShopLinked"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>