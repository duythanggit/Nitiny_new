<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorD7CC75</item>
        <item name="colorPrimaryDark">@color/colorD7CC75</item>
        <item name="colorAccent">@color/colorD7CC75</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textColor">@color/color242937</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <declare-styleable name="ToolbarStyleable">
        <attr name="tsTitle" format="string" />
        <attr name="tsEnableBack" format="boolean" />
    </declare-styleable>

    <style name="ConstraintCenterVertical">
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>

    <style name="ConstraintCenterHorizontal">
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
    </style>

    <style name="ConstraintCenter">
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>

    <style name="StyleEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorD7CC75</item>
        <item name="colorControlActivated">@color/colorD7CC75</item>
    </style>

    <style name="TitleAuthSelected">
        <item name="android:textColor">@color/colorD7CC75</item>
        <item name="android:textSize">@dimen/text_size_18sp</item>
    </style>

    <style name="TitleAuthUnSelected">
        <item name="android:textColor">@color/color33242937</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTextAppearance</item>
    </style>

    <style name="MyCustomTextAppearance" parent="android:TextAppearance">
        <item name="textAllCaps">false</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/colorDBDBDB</item>
        <item name="colorControlActivated">@color/colorFFF701</item>
    </style>

    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/text_size_12sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/text_size_12sp</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/text_size_12sp</item>
    </style>

<!--    BottomSheetStyle-->
    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

